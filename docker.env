# ==============================================================================
# SSO Login - Docker Environment Configuration
# ==============================================================================
# This file is used by docker-compose.yml via: docker compose --env-file docker.env up
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
NODE_ENV=production
PORT=3000

# ==============================================================================
# DATABASE (PostgreSQL in Docker)
# ==============================================================================
# IMPORTANT: POSTGRES_USER is the PostgreSQL container user
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sso_db
DB_PORT=5432

# ==============================================================================
# SSO CONFIGURATION
# ==============================================================================
# For local development with Docker
SSO_ISSUER=http://localhost:3000

# Session encryption key (auto-generated UUID-based secret)
SESSION_SECRET=2cc065e0-405c-4a59-9137-747aa697bad741adabc9-bdc7-4c2a-9a8a-fb254689df5a

# ==============================================================================
# SUPERADMIN
# ==============================================================================
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=Admin@123

# ==============================================================================
# HRIS INTEGRATION (Optional)
# ==============================================================================
HRIS_API_BASE_URL=
HRIS_API_TOKEN=

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=info
