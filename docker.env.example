# ==============================================================================
# SSO Login - Docker Environment Configuration
# ==============================================================================
# Copy this file to .env and customize for your Docker deployment
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
NODE_ENV=production
PORT=3000

# ==============================================================================
# DATABASE
# ==============================================================================
# These are used by docker-compose to configure PostgreSQL
DB_USER=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=sso_db
DB_PORT=5432

# ==============================================================================
# SSO CONFIGURATION
# ==============================================================================
# The public URL where your SSO will be accessible
# IMPORTANT: Update this to your actual domain in production!
SSO_ISSUER=https://sso.yourdomain.com

# Cookie security - set to 'false' when using HTTP, 'true' for HTTPS
# When false, cookies won't have Secure flag and will work over HTTP
# Default: uses NODE_ENV (production = true, otherwise = false)
COOKIE_SECURE=true

# Session encryption key - MUST be at least 32 characters
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-super-secure-session-secret-at-least-32-chars

# ==============================================================================
# SUPERADMIN
# ==============================================================================
# Initial superadmin credentials (used for first-time database seeding)
SUPERADMIN_EMAIL=admin@yourdomain.com
SUPERADMIN_PASSWORD=your-secure-admin-password

# ==============================================================================
# HRIS INTEGRATION (Optional)
# ==============================================================================
HRIS_API_BASE_URL=
HRIS_API_TOKEN=

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=info
